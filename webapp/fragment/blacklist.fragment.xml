	<Panel id="complianceRisksPanel" expandable="true" expanded="true" width="auto">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="{i18n>complainceRisks}" />
				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<content>
			<List noDataText="{i18n>noData}" class="listText" items="{ path: 'ToCounterpartyDetail', templateShareable:false }">
				<CustomListItem>
					<Panel expandable="true" expanded="true" width="auto">
						<headerToolbar>
							<Toolbar height="3rem">
								<Title text="{Name}" />
								<ToolbarSpacer />
							</Toolbar>
						</headerToolbar>
						<content>
							<VBox>
								<HBox justifyContent="SpaceBetween">
									<VBox class="leftVBoxStyle" width="50%">
										<Label class="topLabel" text="{i18n>rating}" />
										<Text text="{Rating}" />
									</VBox>
									<VBox class="rightVBoxStyle" width="50%">
										<Label class="topLabel" text="{i18n>status}" />
										<Text class="{= ${BlackList} ? 'red' : '' }" text="{= ${BlackList} ? ${i18n>blacklisted} : ${i18n>notBlacklisted} }" />
									</VBox>
								</HBox>
								<Label class="topLabel" text="{i18n>risks}" />
								<List noDataText="{i18n>noData}" class="listText" items="{ path: 'ToComplianceRisk', templateShareable:false }">
									<CustomListItem>
										<HBox width="100%">
											<core:Icon src="sap-icon://circle-task-2" class="size1" 
												color="{= ${Color} === 'R' ? 'red' : ${Color} === 'G' ? 'green' : 'yellow' }" />
											<Text text="{RiskName}" />
										</HBox>
									</CustomListItem>
								</List>
							</VBox>
						</content>
					</Panel>
				</CustomListItem>
			</List>
		</content>
	</Panel>
</core:FragmentDefinition>