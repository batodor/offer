<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Panel expandable="true" expanded="true" width="auto">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="{i18n>complainceRisks}" />
				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<content>
			<List noDataText="{i18n>noData}" id="risks" class="listText" items="{ path: 'ToOfferCounterparty', templateShareable: false }">
				<CustomListItem>
					<Panel expandable="true" expanded="true" width="auto">
						<headerToolbar>
							<Toolbar height="3rem">
								<Title text="{Name}" />
								<ToolbarSpacer />
							</Toolbar>
						</headerToolbar>
						<content>
							<VBox>
								<HBox justifyContent="SpaceBetween">
									<VBox class="leftVBoxStyle" width="50%">
										<Label class="topLabel" text="{i18n>rating}" />
										<Text text="{Rating}" />
									</VBox>
									<VBox class="rightVBoxStyle" width="50%">
										<Label class="topLabel" text="{i18n>status}" />
										<Text class="{= ${BlackList} ? 'red' : '' }" text="{= ${BlackList} ? ${i18n>blacklisted} : ${i18n>notBlacklisted} }" />
									</VBox>
								</HBox>
								<Label class="topLabel" text="{i18n>risks}" />
								<List noDataText="{i18n>noData}" class="listText" 
									items="{ path: 'ToComplianceRisk', templateShareable: false }">
									<CustomListItem>
										<HBox width="100%">
											<core:Icon 
												src="{= ${Color} === 'red' ? 'sap-icon://alert' : '' }{= ${Color} === 'yellow' ? 'sap-icon://message-warning' : '' }{= ${Color} === 'green' ? 'sap-icon://accept' : '' }" 
												class="size1 marginRight" 
												color="{Color}"
												visible="{= ${Color} ? true : false }" />
											<Text text="{RiskName}" />
										</HBox>
									</CustomListItem>
								</List>
							</VBox>
						</content>
					</Panel>
				</CustomListItem>
			</List>
			<OverflowToolbar class="topLabel" height="3rem" width="100%">
				<Title text="{i18n>limits}" titleStyle="H3"/>
			</OverflowToolbar>
			<List noDataText="{i18n>none}" id="limits" class="listText" items="{}">
				<CustomListItem>
					<VBox>
						<HBox justifyContent="SpaceBetween">
							<VBox class="leftVBoxStyle" width="50%">
								<Label class="topLabel" text="{i18n>paymentTerms}" />
								<Text text="{PaymentCondition}" />
							</VBox>
							<VBox class="rightVBoxStyle" width="50%">
								<Label class="topLabel" text="{i18n>period}" />
								<Text text="{Period} {PeriodUOM}" />
							</VBox>
						</HBox>
						<Label class="topLabel" text="{i18n>tonnage}" />
						<Text text="{Tonnage} {TonnageUOM}" />
					</VBox>
				</CustomListItem>
			</List>
			<OverflowToolbar class="topLabel" height="3rem" width="100%">
				<Title text="{i18n>otherRisks}" titleStyle="H3"/>
			</OverflowToolbar>
			<HBox justifyContent="SpaceBetween">
				<VBox class="leftVBoxStyle" width="50%">
					<Label class="topLabel" text="{i18n>countriesSanction}" />
					<Text id="countriesSanction" text="{i18n>none}" />
				</VBox>
				<VBox class="rightVBoxStyle" width="50%">
					<Label class="topLabel" text="{i18n>risks}" />
					<List noDataText="{i18n>none}" class="listText heightAuto" items="{ path: 'ToRisksByOffer', templateShareable: false }">
						<CustomListItem>
							<Text text="{RiskName}" />
						</CustomListItem>
					</List>
				</VBox>
			</HBox>
		</content>
	</Panel>
</core:FragmentDefinition>