<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Panel expandable="true" expanded="false" width="auto">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="{ path: 'DateFrom', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } }
					{= ${DateFrom} ? ' - ' : '' } { path: 'DateTo', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } }" />
				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<content>
			<VBox>
				<Input value="{TCPosition}" visible="false" />
				<HBox justifyContent="SpaceBetween">
					<VBox class="leftVBoxStyle" width="50%">
						<Label required="true" class="topLabel" text="{i18n>dateFrom}" />
						<DatePicker change="onDateChange" custom:key="dateFrom" dateValue="{DateFrom}" />
					</VBox>
					<VBox class="rightVBoxStyle" width="50%">
						<Label required="true" class="topLabel" text="{i18n>dateTo}" />
						<DatePicker change="onDateChange" custom:key="dateTo" dateValue="{DateTo}" />
					</VBox>
				</HBox>
				
				<Label class="topLabel" text="{i18n>numberOfShipments}" />
				<StepInput min="0" max="100" textAlign="Center" value="{NumberOfShipments}" />
				
				<HBox justifyContent="SpaceBetween">
					<VBox class="leftVBoxStyle" width="50%">
						<Label class="topLabel" text="{i18n>shipmentSize} ({i18n>min})" />
						<Input type="Number" placeholder="0" value="{ShipmentSizeMin}" />
					</VBox>
					<VBox class="rightVBoxStyle" width="50%">
						<Label class="topLabel" text="{i18n>shipmentSize} ({i18n>max})" />
						<Input type="Number" placeholder="0" value="{ShipmentSizeMax}" />
					</VBox>
				</HBox>
				
				<HBox justifyContent="SpaceBetween">
					<VBox class="leftVBoxStyle" width="50%">
						<Label class="topLabel" text="{i18n>shipmentTolerance}" />
						<StepInput min="0" max="100" textAlign="Center" value="{ShipmentTolerance}" />
					</VBox>
					<VBox class="rightVBoxStyle" width="50%">
						<Label class="topLabel" text="{i18n>toleranceUom}" />
						<Select forceSelection="false" custom:name="ShipmentToleranceUOM" selectedKey="{= ${ShipmentToleranceUOM} ? ${ShipmentToleranceUOM} : '%' }"
							items="{ path: '/dictionaryToleranceUOMSet', sorter: { path: 'Code' }, templateShareable:false }" width="100%">
							<core:Item key="{Code}" text="{Code}"/>
						</Select>
					</VBox>
				</HBox>
				
				<HBox justifyContent="SpaceBetween">
					<VBox class="leftVBoxStyle" width="50%">
						<Label class="topLabel" text="{i18n>tonnage} ({i18n>min})" />
						<Input type="Number" placeholder="0" value="{TonnageMin}" />
					</VBox>
					<VBox class="rightVBoxStyle" width="50%">
						<Label class="topLabel" text="{i18n>tonnage} ({i18n>max})" />
						<Input type="Number" placeholder="0" value="{TonnageMax}" />
					</VBox>
				</HBox>
				
				<HBox justifyContent="SpaceBetween">
					<VBox class="leftVBoxStyle" width="50%">
						<Label class="topLabel" text="{i18n>tonnageTolerance}" />
						<StepInput min="0" max="100" textAlign="Center" value="{TonnageTolerance}" />
					</VBox>
					<VBox class="rightVBoxStyle" width="50%">
						<Label class="topLabel" text="{i18n>toleranceUom}" />
						<Select forceSelection="false" custom:name="TonnageToleranceUOM" selectedKey="{= ${TonnageToleranceUOM} ? ${TonnageToleranceUOM} : '%' }"
							items="{ path: '/dictionaryToleranceUOMSet', sorter: { path: 'Code' }, templateShareable:false }" width="100%">
							<core:Item key="{Code}" text="{Code}"/>
						</Select>
					</VBox>
				</HBox>
			</VBox>
		</content>
	</Panel>
</core:FragmentDefinition>