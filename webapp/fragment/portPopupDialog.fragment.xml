<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>port}" stretch="true" class="sapUiContentPadding" id="portPopupDialog">
		<content>
			<l:BlockLayout>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell width="1">
						<SearchField placeholder="{i18n>countryCode}" id="portPopupCountryFilter" custom:id="portPopup" custom:key="Country" showSearchButton="true" 
							search="triggerSearch" width="100%"  />
					</l:BlockLayoutCell>
					<l:BlockLayoutCell width="1">
						<SearchField placeholder="{i18n>portCode}" id="portPopupCodeFilter" custom:id="portPopup" custom:key="Code" showSearchButton="true" 
							search="triggerSearch" width="100%"/>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell width="1">
						<SearchField placeholder="{i18n>portName}" id="portPopupNameFilter" custom:id="portPopup" custom:key="Name" showSearchButton="true" 
							search="triggerSearch" width="100%"/>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
			<Table mode="SingleSelectMaster" includeItemInSelection="true" custom:id="portPopup" id="portPopup" items="{}" select="onTableSelect" 
				updateFinished="onListUpdateFinished" noDataText="{i18n>detailLineItemTableNoDataText}" growingThreshold="10" growing="true" growingScrollToLoad="false" 
				busyIndicatorDelay="{detailView>/lineItemTableDelay}">
				<columns>
					<Column><Text class="black" text="{i18n>countryCode}"/></Column>
					<Column><Text class="black" text="{i18n>portCode}"/></Column>
					<Column><Text class="black" text="{i18n>portName}"/></Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{Country}"/>
							<Text text="{Code}"/>
							<Text text="{Name}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="portPopup" type="Back" press="dialogCancel"/>
			<Button text="{i18n>select}" custom:id="portPopup" custom:key="Name" type="Accept" id="portPopupSelect" enabled="false" press="dialogSelect"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>