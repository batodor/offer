<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="{i18n>price}" stretch="true" class="sapUiContentPadding" id="priceDialog">
		<content>
			<Label required="true" class="topLabel" text="{i18n>incoterms}" />
			<ToolbarSpacer/>
			<Select forceSelection="false" custom:key="incoterms" selectedKey="{Incoterms}" class="fullWidth" width="100%" items="{ path: '/incotermsSet', sorter: { path: 'Incoterms' } }">
				<core:Item key="{Incoterms}" text="{Incoterms} - {Description}"/>
			</Select>
			<ToolbarSpacer/>
			<Label required="true" class="topLabel" text="{i18n>deliveryPoint}" />
			<ToolbarSpacer/>
			<MultiInput
				custom:id="portPopup"
				custom:set="port"
				custom:key="deliveryPoint"
				custom:select="Name"
				custom:filters="Country,Code,Name"
				width="100%" 
				enableMultiLineMode="true" 
				showValueHelp="true"
				valueHelpRequest="handleValueHelp"
				showSuggestion="true"
				suggest="handleSuggest"
				suggestionItems="{/portSet}" >
				<suggestionItems>
					<core:Item text="{Name}" />
				</suggestionItems>
			</MultiInput>
			<ToolbarSpacer/>
			<Label class="topLabel" text="{i18n>offerPrice}" />
			<ToolbarSpacer/>
			<Input type="Number" value="{OfferPrice}" />
			<ToolbarSpacer/>
			<HBox justifyContent="SpaceBetween">
				<VBox class="leftVBoxStyle" width="50%">
					<Label class="topLabel" text="{i18n>price}" />
					<Switch change="onSwitch" custom:id="indexFormula" state="false" customTextOn="{i18n>index}" customTextOff="{i18n>fix}">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Switch>
				</VBox>
				<VBox visible="false" class="rightVBoxStyle" id="indexFormula" width="50%">
					<Label required="true" class="topLabel" text="{i18n>indexFormula}" />
					<Input value="{IndexFormula}" />
				</VBox>
			</HBox>
			<HBox justifyContent="SpaceBetween">
				<VBox class="leftVBoxStyle" width="50%">
					<Label class="topLabel" text="{i18n>cv}" />
					<Input value="{CV}" type="Number" />
				</VBox>
				<VBox class="rightVBoxStyle" width="50%">
					<Label class="topLabel" text="{i18n>cvBase}" />
					<Select forceSelection="false" selectedKey="NAR" width="100%">
						<core:Item key="" text=""/>
						<core:Item key="NAR" text="NAR"/>
						<core:Item key="GAR" text="GAR"/>
						<core:Item key="GAD" text="GAD"/>
					</Select>
				</VBox>
			</HBox>
		</content>
		<buttons>
			<Button text="{i18n>cancel}" custom:id="price" type="Back" press="dialogCancel"/>
			<Button text="{i18n>add}" custom:id="price" visible="false" type="Accept" press="dialogAdd"/>
			<Button text="{i18n>save}" custom:id="price" visible="false" type="Accept" press="dialogSave"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>