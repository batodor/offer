<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Panel expandable="true" expanded="true" width="auto">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="{VolumeNumber} / {= ${VolumeType} ? ${i18n>optional} : ${i18n>fixed} }" />
				<Input value="{= ${TCNumber} ? ${TCNumber} : '$$00000001' }" custom:name="TCNumber" visible="false" />
				<Input value="{VolumeNumber}" visible="false" />
				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<content>
			<HBox justifyContent="SpaceBetween">
				<VBox class="leftVBoxStyle" width="50%">
					<Label class="topLabel" text="{i18n>volumeType}" />
					<Switch change="onSwitch" custom:type="volumes" state="{VolumeType}" customTextOn="{i18n>optional}" customTextOff="{i18n>fixed}">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Switch>
				</VBox>
				<VBox class="rightVBoxStyle" visible="{= ${VolumeType} ? true : false }" width="50%">
					<Label required="true" class="topLabel" text="{i18n>volumeOwner}" />
					<Select custom:key="volumeOwner" forceSelection="false" selectedKey="{VolumeOwner}" width="100%" 
						items="{ path: '/dictionaryVolumeOwnerSet', sorter: { path: 'Code' }, templateShareable:false }">
						<core:Item key="{Code}" text="{Code} - {Name}"/>
					</Select>
				</VBox>
			</HBox>
			<List noDataText="{i18n>noData}" mode="SingleSelectMaster" items="{ path: 'ToOfferPeriod', templateShareable:false }" selectionChange="onListSelect">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>periodsPrices}" titleStyle="H3" />
						<ToolbarSpacer />
						<Button type="Accept" custom:id="periodsPrices" text="{i18n>add}" press="add" />
						<Button type="Reject" custom:id="periodsPrices" text="{i18n>delete}" press="delete" enabled="false" />
					</Toolbar>
				</headerToolbar>
				<items>
					<CustomListItem>
						<core:Fragment fragmentName="fragment.periodsPrices" type="XML"></core:Fragment>
					</CustomListItem>
				</items>
			</List>
		</content>
	</Panel>
</core:FragmentDefinition>